<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout.principal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/values_background"
    android:orientation="vertical" >

    <!-- HEADER -->
    
    <!-- BODY -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        style="@style/Layout.body"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/patron_de_fondo"
        android:orientation="vertical" >

        <TextView
            style="@style/Text.Titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ingresa tu email y te enviaremos una nueva contraseÃ±a" />
        
        <EditText 
            android:id="@+id/recuperarcontrasena_recibelo_email_edittext"
            android:layout_width="230dp"
        	android:layout_height="wrap_content"
        	android:hint="Email"
        	/>
        
        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
            
            <Button
                android:id="@+id/recuperarcontrasena_recibelo_recuperar_button"
                style="@style/RM_Button"
                android:layout_width="230dp"
                android:background="@drawable/boton_background"
                android:text="Recuperar" />
            
        <Button
            android:id="@+id/recuperarcontrasena_regresar_button"
            style="@style/RM_Button"
            android:layout_width="230dp"
            android:background="@drawable/button_background_orange"
            android:text="Volver..." />
            
        </LinearLayout>
        
    </LinearLayout>
    </LinearLayout> 